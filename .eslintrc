{
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": ["svelte3"],
  "overrides": [
    {
      "files": ["**/*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "extends": ["eslint:recommended"],
  "rules": {
    "no-var": "error",
    "semi": "error",
    "max-params": ["error", 4],
    "eqeqeq": "error"
  }
}
